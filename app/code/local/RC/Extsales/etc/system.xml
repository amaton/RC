<?xml version="1.0"?>
<config>
    <tabs>
        <extsales translate="label" module="extsales">
            <label><![CDATA[RC Customization]]></label>
            <sort_order>101</sort_order>
        </extsales>
    </tabs>
    <sections>
        <extsales translate="label" module="extsales">
            <label>PDF Attachments</label>
            <tab>extsales</tab>
            <sort_order>15</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <pdf_templates translate="label">
                    <label>Manage PDF Attachment Template</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <use_default>
                            <label>Use Default PDF Templates</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Use default PDF templates for invoice attachment]]></comment>
                        </use_default>
                        <invoice_pdf_template>
                            <label>Attached Invoice PDF Templates</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Select PDF template for invoice attachment]]></comment>
                        </invoice_pdf_template>
                    </fields>
                </pdf_templates>
            </groups>
        </extsales>
    </sections>
</config>